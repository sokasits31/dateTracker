<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Family Hardship Contribution Web Application</display-name>

  <!-- Tell the server to use form-based authentication. -->
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/loginError.jsp</form-error-page>
    </form-login-config>
  </login-config>


  <error-page>
    <!-- Forbidden directory listing -->
    <error-code>403</error-code>
    <location>/forbidden.jsp</location>
  </error-page>


  <!-- Protect everything within the "user search" directory. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Member Menu</web-resource-name>
      <url-pattern>/memberMenu.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>member</role-name>
    </auth-constraint>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Protect everything within the "user search" directory. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin Menu</web-resource-name>
      <url-pattern>/adminMenu.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>

  </security-constraint>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-role>
    <role-name>member</role-name>
  </security-role>
</web-app>
